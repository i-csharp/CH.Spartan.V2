                   <th data-field="cShakeTime" data-sortable="true">@L("震动时间")</th>
                   <th data-field="cIsLowBattery" data-sortable="true">@L("是否低电")</th>
                   <th data-field="cLowBatteryTime" data-sortable="true">@L("低电时间")</th>
                   <th data-field="cLowBatteryLastAlarmTime" data-sortable="true">@L("低电最后报警时间")</th>
                   <th data-field="cIsInBlindArea" data-sortable="true">@L("是否进入盲区")</th>
                   <th data-field="cInBlindAreaTime" data-sortable="true">@L("进入盲区时间")</th>
                   <th data-field="cInBlindAreaLastAlarmTime" data-sortable="true">@L("进入盲区最后报警时间")</th>
                   <th data-field="deviceType" data-sortable="true">@L("设备类型")</th>
                   <th data-field="node" data-sortable="true">@L("所属节点")</th>
                   <th data-field="tenantId" data-sortable="true">@L("所属租户Id")</th>
                   <th data-field="tenant" data-sortable="true">@L("所属租户")</th>
                   <th data-field="userId" data-sortable="true">@L("所属用户Id")</th>
                   <th data-field="user" data-sortable="true">@L("所属租户")</th>
                   <th data-field="lastModificationTime" data-sortable="true">@L("最后编辑时间")</th>
                   <th data-field="creationTime" data-sortable="true">@L("创建时间")</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



