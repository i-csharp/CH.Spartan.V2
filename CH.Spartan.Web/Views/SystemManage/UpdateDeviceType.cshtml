                   <div class="form-group">
                       <label class="col-sm-4 control-label">@L("是否有离开盲区报警"):</label>
                       <div class="col-sm-8">
                           <select name="IsHaveOutBlindArea" id="IsHaveOutBlindArea" class="form-control"> @Html.GetOptionHtmlByEnable(Model.DeviceType.IsHaveOutBlindArea)</select>
                       </div>
                   </div>
               </div>
               <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                   <div class="form-group">
                       <label class="col-sm-4 control-label">@L("是否有启动报警报警"):</label>
                       <div class="col-sm-8">
                           <select name="IsHaveStartup" id="IsHaveStartup" class="form-control"> @Html.GetOptionHtmlByEnable(Model.DeviceType.IsHaveStartup)</select>
                       </div>
                   </div>
               </div>
           </div>
       </div>
 </form>
</div>
