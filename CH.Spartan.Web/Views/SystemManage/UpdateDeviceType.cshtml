@model CH.Spartan.DeviceTypes.Dto.UpdateDeviceTypeOutput
@section scripts
{
    @Scripts.Render("~/scripts/plugins/edit")
    <script type="text/javascript">
        var from = $("#form");
        (function ($) {
            if (!$) {
                return;
            }
            from.validate({
                submitHandler: function (form) {
                    var data =
                    {
                        deviceType: abp.utils.getFormData(form)
                    };
                    abp.ajax({
                        url: "/SystemManage/UpdateDeviceType",
                        data: JSON.stringify(data)
                    }).done(function (result) {
                        abp.message.success("@L("保存成功")");
                        abp.dialog.close();
                    });
                }
            });
        })(jQuery);

        function submitForm() {
            from.submit();
        }
    </script>
}

<div class="ibox float-e-margins animated lightSpeedIn">
    <form class="form-horizontal" id="form">
        <input name="Id" class="form-control" type="hidden" value="@Model.DeviceType.Id">
        <div class="ibox-content">
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="form-group">
                        <label class="col-sm-4 control-label">@L("设备类型名字"):</label>
                        <div class="col-sm-8">
                            <input class="form-control " type="text" id="Name" name="Name" value="@Model.DeviceType.Name" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">@L("接入网关"):</label>
                        <div class="col-sm-8">
                            <input class="form-control " type="text" id="SwitchInGateway" name="SwitchInGateway" value="@Model.DeviceType.SwitchInGateway" />
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="form-group">
                        <label class="col-sm-4 control-label">@L("供应商"):</label>
                        <div class="col-sm-8">
                            <input class="form-control " type="text" id="Supplier" name="Supplier" value="@Model.DeviceType.Supplier" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">@L("制造商"):</label>
                        <div class="col-sm-8">
                            <input class="form-control " type="text" id="Manufacturer" name="Manufacturer" value="@Model.DeviceType.Manufacturer" />
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="form-group">
                        <label class="col-sm-4 control-label">@L("服务费元/年"):</label>
                        <div class="col-sm-8">
                            <input class="form-control " type="text" id="ServiceCharge" name="ServiceCharge" value="@Model.DeviceType.ServiceCharge" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">@L("设备唯一编码生成规则"):</label>
                        <div class="col-sm-8">
                            <input class="form-control " type="text" id="CodeCreateRule" name="CodeCreateRule" value="@Model.DeviceType.CodeCreateRule" />
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="form-group">
                        <label class="col-sm-4 control-label">@L("是否有继电器"):</label>
                        <div class="col-sm-8">
                            <select name="IsHaveRelay" id="IsHaveRelay" class="form-control"> @Html.GetOptionHtmlByEnable(Model.DeviceType.IsHaveRelay)</select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
