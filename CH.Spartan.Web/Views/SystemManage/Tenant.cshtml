@using System.Web.Optimization
@section styles
{
    @Styles.Render("~/styles/plugins/table")
}
@section scripts
{
    @Scripts.Render("~/scripts/plugins/table")
    <script type="text/javascript">
        //操作
        function formatterOp(value, row, index) {
            var edit = '<i class="btn-op fa fa-edit" title="@L("修改")" onclick="update(\'' + row.id + '\')"></i>';
            var del = '<i class="btn-op fa fa-trash-o" title="@L("删除")" onclick="del(\'' + row.id + '\')"></i>';
            return edit + del;
        }

        //添加
        function create() {
            abp.ui.open("/SystemManage/CreateTenant", "@L("添加")@L("租户")", {
                area: ["50%", "50%"],
                btn: ["@L("确定")", '@L("取消")'],
                yes: function(index, layero) {
                    var iframeWin = layero.find("iframe")[0].contentWindow;
                    iframeWin.saveData();
                },
                cancel: function(index) {
                    debugger;
                },
                end: function() {
                    debugger;
                }
            });
        }


        //更新
        function update(id) {
            abp.ui.open("/SystemManage/UpdateTenant?id=" + id, "@L("修改")@L("租户")", {
                area: ["50%", "50%"],
                btn: ["@L("保存")", '@L("取消")'],
                yes: function(index, layero) {
                    var iframeWin = layero.find("iframe")[0].contentWindow;
                    iframeWin.saveData();
                },
                cancel: function(index) {
                    debugger;
                },
                end: function() {
                    debugger;
                }
            });
        }

        //删除
        function del(ids) {
            abp.message.confirm("@L("确定")@L("删除")?", function(yes) {
                if (!yes) return;
                abp.ajax({
                    url: "/SystemManage/DeleteTenant",
                    data: JSON.stringify(ids)
                }).done(function(data) {
                    debugger;
                });
            });
        }

        (function($) {
            if (!$) {
                return;
            }

            //搜索
            $("#btn-search").click(function() {
                var args =
                {
                    query: abp.utils.getFormData("#form")
                }
                $("#table").bootstrapTable("refresh", args);
            });

            //添加
            $("#btn-add").click(function() {
                create();
            });

            //删除
            $("#btn-del").click(function() {
                var rows = $("#table").bootstrapTable("getSelections");
                var ids = [];
                $.each(rows,function(index, item) {
                    ids.push(item.id);
                });
                del(ids);
            });
        })(jQuery);
    </script>
}
<div class="wrapper wrapper-content animated lightSpeedIn list">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content list-toolbar">
                    <form role="form" class="form-inline" id="form">
                        <div class="form-group">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="请输入租户名或者昵称" name="SearchText">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button" id="btn-search">查询</button>
                                </span>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="ibox-content list-content">
                    <div class="btn-group hidden-xs" id="tableToolbar" role="group">
                        <button type="button" class="btn btn-outline btn-default" id="btn-add">
                            <i class="fa fa-plus" aria-hidden="true"></i>
                        </button>
                        <button type="button" class="btn btn-outline btn-default" id="btn-del">
                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                        </button>
                    </div>
                    <table id="table"
                           data-toggle="table"
                           data-url="/SystemManage/SearchTenant"
                           data-toolbar="#tableToolbar"
                           data-height="550"
                           data-show-export="true">
                        <thead>
                            <tr>
                                <th data-field="state" data-checkbox="true"></th>
                                <th data-field="id" data-sortable="true" data-width="50">编号</th>
                                <th data-field="op" data-formatter="formatterOp" data-width="60">操作</th>
                                <th data-field="tenancyName" data-sortable="true">租户名</th>
                                <th data-field="name" data-sortable="true">租户昵称</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



