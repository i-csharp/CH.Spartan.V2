@model CH.Spartan.Settings.Dto.GetUpdateGeneralSettingOutput
@using Abp.Timing
@section styles
{
    @Styles.Render("~/styles/plugins/edit")
    <style type="text/css">
        .tabs-container ul > li > a {
            border-radius: 0px;
        }

        .tabs-container .panel-body {
            border: 0;
            height: 599px;
            overflow: auto;
        }

        .checkbox.i-checks label:first-child {
            padding-left: 0px;
        }

        .checkbox.i-checks label:last-child {
            padding-left: 15px;
        }
    </style>

}
@section scripts
{
    @Scripts.Render("~/scripts/plugins/edit")
    <script type="text/javascript">
        (function ($) {
            if (!$) {
                return;
            }
            var from = $("#form");
            $(function () {
                from.validate({
                    submitHandler: function (form) {
                        var data =
                        {
                            generalSetting: abp.utils.getFormData(form)
                        };
                        abp.ajax({
                            url: "/SystemManage/UpdateSetting",
                            data: JSON.stringify(data)
                        }).done(function (result) {
                            abp.message.success("@L("保存成功")");
                        });
                    }
                });

                $("#btn-save").click(function () {
                    from.submit();
                });
            });
        })(jQuery);
    </script>
}
