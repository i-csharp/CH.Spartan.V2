                        <div id="tab-mq" class="tab-pane">
                            <div class="panel-body">
                                <div class="form-group">
                                    <label class="control-label" for="General_ActiveMq_Notification_Name">@L("消息队列名字"):</label>
                                    <input class="form-control required" type="text" id="General_ActiveMq_Notification_Name" name="General_ActiveMq_Notification_Name" value="@Model.GeneralSetting.General_ActiveMq_Notification_Name" />
                                </div>
                                <div class="form-group">
                                    <label class="control-label" for="General_ActiveMq_Notification_Uri">@L("消息队列地址"):</label>
                                    <input class="form-control required" type="text" id="General_ActiveMq_Notification_Uri" name="General_ActiveMq_Notification_Uri" value="@Model.GeneralSetting.General_ActiveMq_Notification_Uri" />
                                </div>
