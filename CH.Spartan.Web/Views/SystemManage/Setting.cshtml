                                    <label class="control-label" for="General_ActiveMq_Event_Name">@L("事件队列名字"):</label>
                                    <input class="form-control required" type="text" id="General_ActiveMq_Event_Name" name="General_ActiveMq_Event_Name" value="@Model.GeneralSetting.General_ActiveMq_Event_Name" />
                                </div>
                                <div class="form-group">
                                    <label class="control-label" for="General_ActiveMq_Event_Uri">@L("事件队列地址"):</label>
                                    <input class="form-control required" type="text" id="General_ActiveMq_Event_Uri" name="General_ActiveMq_Event_Uri" value="@Model.GeneralSetting.General_ActiveMq_Event_Uri" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <button type="button" class="btn btn-primary ml5" id="btn-save">@L("保存")</button>
            </div>
        </div>
    </form>
</div>
