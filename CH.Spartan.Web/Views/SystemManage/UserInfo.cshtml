@model CH.Spartan.Users.Dto.UpdateUserInfoOutput
@using Abp.Timing
@section styles
{
    @Styles.Render("~/styles/plugins/edit")
    @Styles.Render("~/styles/plugins/cropper")
}
@section scripts
{
    @Scripts.Render("~/scripts/plugins/edit")
    @Scripts.Render("~/scripts/plugins/cropper")
    <script type="text/javascript">
        (function($) {
            if (!$) {
                return;
            }
            var from = $("#form");
            $(function() {
                var image = $("#image").cropper({
                    aspectRatio: 1 / 1,
                    preview: ".img-preview",
                    crop: function(e) {

                    }
                });
                $("body").on("keydown", function(e) {
                    switch (e.which) {
                    case 37:
                        e.preventDefault();
                        image.cropper('move', -1, 0);
                        break;
                    case 38:
                        e.preventDefault();
                        image.cropper('move', 0, -1);
                        break;
                    case 39:
                        e.preventDefault();
                        image.cropper('move', 1, 0);
                        break;
                    case 40:
                        e.preventDefault();
                        image.cropper('move', 0, 1);
                        break;
                    }
                });

                $("#zoomIn").click(function() {
                    image.cropper("zoom", 0.1);
                });
                $("#zoomOut").click(function() {
                    image.cropper("zoom", -0.1);
                });

                $("#rotateLeft").click(function() {
                    image.cropper("rotate", 45);
                });

                $("#rotateRight").click(function() {
                    image.cropper("rotate", -45);
                });

                var inputImage = $("#inputImage");
                var URL = window.URL || window.webkitURL, blobURL;

                if (URL) {
                    inputImage.change(function() {
                        var files = this.files, file;

                        if (files && files.length) {
                            file = files[0];
                            if (/^image\/\w+$/.test(file.type)) {
                                blobURL = URL.createObjectURL(file);
                                image.one("built.cropper", function() {
                                    URL.revokeObjectURL(blobURL);
                                }).cropper("reset", true).cropper("replace", blobURL);
                                inputImage.val('');
                            } else {
                                abp.message.error("@L("请选择一张图片")");
                            }
                        }
                    });
                } else {
                    inputImage.parent().remove();
                }
                from.validate({
                    submitHandler: function(form) {
                        var data =
                        {
                            user: abp.utils.getFormData(form)
                        };
                        data.user.avatar = image.cropper("getCroppedCanvas", { width :150,height:150}).toDataURL("image/png", 0.3);
                        abp.ajax({
                            url: "/SystemManage/UpdateUserInfo",
                            data: JSON.stringify(data)
                        }).done(function (result) {
                            parent.updateUser(result.user);
                            abp.message.success("@L("保存成功")");
                        });
                    }
                });

                $("#btn-save").click(function() {
                    from.submit();
                });
            });
        })(jQuery);
    </script>
}
<div class="wrapper wrapper-content @SpartanConsts.DefaultAnimate pages" >
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <form role="form" id="form">
                        <input name="Id" class="form-control" type="hidden" value="@Model.User.Id">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="image-crop">
                                    <img src="@Model.User.Avatar" id="image" style="max-width: 100%"/>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h4>@L("头像预览")：</h4>
                                <div class="img-preview img-preview-sm"></div>
                                <h4>@L("说明")：</h4>
                                <p>
                                    @L("你可以选择新图片上传，然后设置头像")
                                </p>
                                <div class="btn-group">
                                    <label title="@L("选择图片")" for="inputImage" class="btn btn-primary">
                                        <input type="file" accept="image/*" name="file" id="inputImage" class="hide"> @L("选择图片")
                                    </label>
                                </div>
                                <h4>@L("其他操作")：</h4>
                                <div class="btn-group">
                                    <button class="btn btn-white" id="zoomIn" type="button">放大</button>
                                    <button class="btn btn-white" id="zoomOut" type="button">缩小</button>
                                    <button class="btn btn-white" id="rotateLeft" type="button">左旋转</button>
                                    <button class="btn btn-white" id="rotateRight" type="button">右旋转</button>
                                </div>
                            </div>
                        </div>
                        <div class="row mt10">
                            <div class="col-md-4 pl0">
                                <div class="form-group">
                                    <label class="col-sm-12 control-label">@L("客户名"):</label>
                                    <div class="col-sm-12">
                                        <input class="form-control required stringCheck" type="text" id="UserName" readonly="readonly" name="UserName" value="@Model.User.UserName"/>
                                        <span class="help-block m-b-none">@L("用于登录系统")</span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-12 control-label">@L("名称"):</label>
                                    <div class="col-sm-12">
                                        <input class="form-control required stringCheck" type="text" id="Name" name="Name" value="@Model.User.Name"/>
                                        <span class="help-block m-b-none">@L("例如 超级管理员")</span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-12 control-label">@L("邮件"):</label>
                                    <div class="col-sm-12">
                                        <input class="form-control  required isEmail" type="text" id="EmailAddress" name="EmailAddress" value="@Model.User.EmailAddress"/>
                                        <span class="help-block m-b-none">@L("请务必填写真实的邮件地址 用于忘记密码时的验证")</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mt5">
                            <div class="col-md-4 text-left">
                                <button type="button" class="btn btn-primary" id="btn-save">@L("保存")</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
