@section styles
{
    @Styles.Render("~/styles/plugins/list")
}
@section scripts
{
    @Scripts.Render("~/scripts/plugins/list")
    <script type="text/javascript">
        //操作
        function formatterOp(value, row, index) {
            var edit="";
			var del="";
			if(abp.auth.isGranted("@SpartanPermissionNames.SystemManages_DeviceType_Update"))
			{
				edit = '<i class="btn-op fa fa-edit" title="@L("修改")" onclick="update(\'' + row.id + '\')"></i>';
			}
			if(abp.auth.isGranted("@SpartanPermissionNames.SystemManages_DeviceType_Delete"))
			{
				del = '<i class="btn-op fa fa-trash-o" title="@L("删除")" onclick="del(\'' + row.id + '\')"></i>';
			}
            return edit + del;
        }

       
		
				 //添加
        function create() {
            abp.dialog.open("/SystemManage/CreateDeviceType", "@L("添加设备类型")", {
                               	area: ["775px", "80%"],
			                //area: ["675px", "80%"],
                //area: ["775px", "80%"],
                //area: ["995px", "80%"],
                //area: ["1250px", "80%"],
                btn: ["@L("确定")", '@L("取消")'],
                yes: function(index, layero) {
                    var iframeWin = layero.find("iframe")[0].contentWindow;
                    iframeWin.submitForm();
                },
                cancel: function(index) {
                },
                end: function() {
                    $("#btn-search").click();
                }
            });
        }
		    
		
          
				//更新
        function update(id) {
            abp.dialog.open("/SystemManage/UpdateDeviceType?id=" + id, "@L("修改设备类型")", {
                         area: ["775px", "80%"],
                            //area: ["675px", "80%"],
                //area: ["775px", "80%"],
                //area: ["995px", "80%"],
                //area: ["1250px", "80%"],
                btn: ["@L("保存")", '@L("取消")'],
                yes: function(index, layero) {
                    var iframeWin = layero.find("iframe")[0].contentWindow;
                    iframeWin.submitForm();
                },
                cancel: function(index) {
                },
                end: function() {
                    $("#btn-search").click();
                }
            });
        }
		    
        

		
				//删除
        function del(ids) {
            if (typeof ids == "string") {
                ids = [{ id: ids }];
            }
            abp.message.confirm("@L("确定删除")?", function(yes) {
                if (!yes) return;
                abp.ajax({
                    url: "/SystemManage/DeleteDeviceType",
                    data: JSON.stringify(ids)
                }).done(function (result) {
                    abp.notify.success("@L("删除成功")");
					$("#btn-search").click();
                });
            });
        }
		    


        

        (function($) {
            if (!$) {
                return;
            }

            //搜索
            $("#btn-search").click(function() {
                var args =
                {
                    query: abp.utils.getFormData("#form")
                }
                $("#table").bootstrapTable("refresh", args);
            });
			
				//添加
				$("#btn-add").click(function() {
					create();
				});
			
				//删除
				$("#btn-del").click(function() {
					var rows = $("#table").bootstrapTable("getSelections");
					var ids = [];
					$.each(rows,function(index, item) {
						ids.push({ id: item.id });
					});
					if (ids.length == 0) {
                    abp.notify.error("@L("请选择要删除的数据")");
                } else {
                    del(ids);
                }
				});
		    

           
        })(jQuery);
    </script>
}
<div class="wrapper wrapper-content animated lightSpeedIn list">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content list-toolbar">
                    <form role="form" class="form-inline" id="form">
                        <div class="form-group">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="@L("请输入关键字")" name="SearchText">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button" id="btn-search">@L("查询")</button>
                                </span>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="ibox-content list-content">
                    <div class="btn-group hidden-xs" id="tableToolbar" role="group">
						@if (IsGranted(SpartanPermissionNames.SystemManages_DeviceType_Create))
						{
							<button type="button" class="btn btn-outline btn-default" id="btn-add"><i class="fa fa-plus" aria-hidden="true"></i></button>
						}
						@if (IsGranted(SpartanPermissionNames.SystemManages_DeviceType_Delete))
						{
							 <button type="button" class="btn btn-outline btn-default" id="btn-del"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
						}
                    </div>
                    <table id="table"
                           data-toggle="table"
                           data-url="/SystemManage/SearchDeviceType"
                           data-toolbar="#tableToolbar"
                           data-height="550"
                           data-show-export="true">
                        <thead>
                            <tr>
							 <th data-field="state" data-checkbox="true"></th>
                                <th data-field="id" data-sortable="true" data-width="50">@L("编号")</th>
                                      <th data-field="op" data-formatter="formatterOp" data-width="60">@L("操作")</th>
							                   <th data-field="name" data-sortable="true">@L("设备类型名字")</th>
                   <th data-field="switchInGateway" data-sortable="true">@L("接入网关")</th>
                   <th data-field="supplier" data-sortable="true">@L("供应商")</th>
                   <th data-field="manufacturer" data-sortable="true">@L("制造商")</th>
                   <th data-field="serviceCharge" data-sortable="true">@L("服务费元/年")</th>
                   <th data-field="codeCreateRule" data-sortable="true">@L("设备唯一编码生成规则")</th>
                   <th data-field="isHaveRelay1" data-sortable="true">@L("是否有继电器1")</th>
                   <th data-field="isHaveRelay2" data-sortable="true">@L("是否有继电器2")</th>
                   <th data-field="isHaveRelay3" data-sortable="true">@L("是否有继电器3")</th>
                   <th data-field="isHavePower" data-sortable="true">@L("是否有电量数据")</th>
                   <th data-field="isHaveAcc" data-sortable="true">@L("是否有Acc信号")</th>
                   <th data-field="isHaveOffLine" data-sortable="true">@L("是否有离线报警")</th>
                   <th data-field="isHaveMainPowerBreak" data-sortable="true">@L("是否有断电报警")</th>
                   <th data-field="isHaveSos" data-sortable="true">@L("是否有SOS求救")</th>
                   <th data-field="isHaveOverSpeed" data-sortable="true">@L("是否有超速报警")</th>
                   <th data-field="isHaveInArea" data-sortable="true">@L("是否有进入区域报警")</th>
                   <th data-field="isHaveFortify" data-sortable="true">@L("是否有离开设防报警")</th>
                   <th data-field="isHaveDropOff" data-sortable="true">@L("是否有脱落报警")</th>
                   <th data-field="isHaveShake" data-sortable="true">@L("是否有震动报警")</th>
                   <th data-field="isHaveLowBattery" data-sortable="true">@L("是否有低电报警")</th>
                   <th data-field="isHaveInBlindArea" data-sortable="true">@L("是否有进入盲区报警")</th>
                   <th data-field="isHaveOutBlindArea" data-sortable="true">@L("是否有离开盲区报警")</th>
                   <th data-field="isHaveStartup" data-sortable="true">@L("是否有启动报警报警")</th>
                   <th data-field="lastModificationTime" data-sortable="true">@L("最后编辑时间")</th>
                   <th data-field="creationTime" data-sortable="true">@L("创建时间")</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



